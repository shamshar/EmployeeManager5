@page "/departments/delete/{Id:int}"
@using EmployeeManager.Domain.DTOs
@using EmployeeManager.UI.Services
@inject IDepartmentApiService DepartmentApi
@inject NavigationManager Navigation

<h3>Delete Department</h3>

@if (Department is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="alert alert-danger">
        <h5>Are you sure you want to delete this department?</h5>
        <p><strong>@Department.Name</strong></p>
    </div>

    <button class="btn btn-danger me-2" @onclick="DeleteDepartment">Delete</button>
    <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private DepartmentDto? Department;

    protected override async Task OnInitializedAsync()
    {
        Department = await DepartmentApi.GetDepartmentByIdAsync(Id);

        if (Department is null)
        {
            Navigation.NavigateTo("/departments/notfound");
        }
    }

    private async Task DeleteDepartment()
    {
        if (Department is null) return;

        await DepartmentApi.DeleteDepartmentAsync(Department.Id);
        Navigation.NavigateTo("/departments");
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/departments");
    }
}
