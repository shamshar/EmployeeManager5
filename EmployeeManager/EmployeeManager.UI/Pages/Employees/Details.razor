@page "/employees/details/{Id:int}"
@using EmployeeManager.Domain.DTOs
@using EmployeeManager.UI.Services
@inject IEmployeeApiService EmployeeService
@inject NavigationManager NavigationManager

<PageTitle>Employee Details</PageTitle>

<h1>Employee Details</h1>

@if (Employee is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="card my-4 mx-auto p-4" style="max-width: 500px; border-radius: 12px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
        <h2 class="text-center mb-4">@Employee.FirstName @Employee.LastName</h2>

        <div class="d-flex justify-content-between mb-2">
            <span class="fw-bold">Department:</span>
            <span>@Employee.DepartmentName</span>
        </div>

        <div class="d-flex justify-content-between mb-2">
            <span class="fw-bold">Developer:</span>
            <span class="@((Employee.IsDeveloper ? "text-success" : "text-muted"))">
                @(Employee.IsDeveloper ? "Yes" : "No")
            </span>
        </div>

        <div class="text-center mt-4">
            <button class="btn btn-outline-primary" @onclick="GoBack">Back to Employee List</button>
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private EmployeeDto? Employee;

    protected override async Task OnInitializedAsync()
    {
        Employee = await EmployeeService.GetByIdAsync(Id);

        if (Employee is null)
        {
            NavigationManager.NavigateTo("/employees/notfound");
        }
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/employees");
    }
}

