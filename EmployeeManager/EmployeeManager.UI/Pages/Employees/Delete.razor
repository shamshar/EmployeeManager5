@page "/employees/delete"
@using EmployeeManager.Domain.DTOs
@using EmployeeManager.UI.Services
@inject IEmployeeApiService EmployeeService
@inject NavigationManager NavigationManager

<PageTitle>Delete Employee</PageTitle>

<h1>Delete Employee</h1>

@if (Employee is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Employee.FirstName @Employee.LastName</h5>
            <p class="card-text"><strong>Department Id:</strong> @Employee.DepartmentId</p>
            <p class="card-text"><strong>Developer:</strong> @(Employee.IsDeveloper ? "Yes" : "No")</p>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-danger me-2" @onclick="DeleteEmployee">Delete</button>
        <button class="btn btn-secondary" @onclick="GoBack">Cancel</button>
    </div>
}

@code {
    [SupplyParameterFromQuery]
    public int Id { get; set; }

    private EmployeeEditDto? Employee;

    protected override async Task OnInitializedAsync()
    {
        Employee = await EmployeeService.GetEmployeeByIdAsync(Id);

        if (Employee is null)
        {
            NavigationManager.NavigateTo("/employees/notfound");
        }
    }

    private async Task DeleteEmployee()
    {
        if (Employee is null) return;

        await EmployeeService.DeleteEmployeeAsync(Employee.Id);
        NavigationManager.NavigateTo("/employees");
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("/employees");
    }
}
